<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marvelapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelApp">
        <activity android:name=".view.MainActivity"/>
        <activity android:name=".QuizActivity"/>
        <activity android:name=".login.AccountAlreadyRegistered"/>
        <activity android:name=".login.CreateAnAccountActivity"/>
        <activity android:name=".login.CreateAPassword"/>
        <activity android:name=".login.ForgotYourPassword"/>
        <activity android:name=".login.LoginActivity"/>
        <activity android:name=".login.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.DetailsComicsActivity" />
        <activity android:name=".view.DetailsHeroesActivity" />
    </application>

</manifest>