<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marvel_logo">

    <TextView
        android:id="@+id/txt_hero_name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/robotocondensed_regular"
        tools:text="Black Widow"
        android:textAlignment="viewStart"
        android:textColor="#EDEDED"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_hero_image_details"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_marvel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/marvel_logo_dois"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/logo_marvel" />

    <ImageView
        android:id="@+id/iv_hero_image_details"
        android:layout_width="155dp"
        android:layout_height="213dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_marvel"
        android:contentDescription="@string/hero_image" />

    <LinearLayout
        android:id="@+id/layout_info_comics2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_hero_name_details"
        app:layout_constraintStart_toStartOf="@id/txt_hero_name_details">

<!--        <TextView-->
<!--            android:id="@+id/txt_author_name"-->
<!--            android:layout_width="217dp"-->
<!--            android:layout_height="23dp"-->
<!--            android:fontFamily="@font/robotocondensed_regular"-->
<!--            android:text="By: Roy Thomas, Gil Kane"-->
<!--            android:textColor="#EDEDED"-->
<!--            android:textSize="20sp"-->
<!--            android:textStyle="bold"/>-->

        <TextView
            android:id="@+id/txt_hero_date_details"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:fontFamily="@font/robotocondensed_regular"
            android:text="Released: Feb 3, 2021"
            android:textColor="#EDEDED"
            android:textSize="20sp"
            android:textStyle="bold"/>

<!--        <TextView-->
<!--            android:id="@+id/txt_comic_pages"-->
<!--            android:layout_width="217dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/robotocondensed_regular"-->
