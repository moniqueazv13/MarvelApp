<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marvelback"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/iv_marvel4"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/marvelname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/tv_title2"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your name and email adress"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_marvel4"/>

    <TextView
        android:id="@+id/tv_message2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We’ll use this to sign you in or to create an account if you don’t have one yet."
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_name2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message2"
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_last_name2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name2"
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_email_adress2"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:hint="Email Adress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_last_name2"
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:maxLines="1"
        android:inputType="text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sign_in1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:cornerRadius="10dp"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#EDC5211C"
        android:text="CONTINUE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email_adress2" />

</androidx.constraintlayout.widget.ConstraintLayout>